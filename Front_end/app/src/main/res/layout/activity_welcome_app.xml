            android:layout_height="wrap_content"
            android:text="Welcome to CaCo IOT"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginEnd="8dp"/>

    </LinearLayout>


